@{
    Layout = null;
    string sTitulo = "Uso de bucle While";
    int iContador = 0;


}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@sTitulo</title>
</head>
<body>
    <div>
    Uso de While

    </div>
    @while (iContador < 10)
    {
        <p>Este es un contador @iContador</p>
        iContador++;

    }





</body>
</html>
